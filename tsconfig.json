{
  "compilerOptions": {
    "types": ["node", "jest"],
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    // Enhance strictness.
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "alwaysStrict": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["coverage", "node_modules", "dist", "tests", "jest.config.ts"]
}
