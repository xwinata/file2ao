{
  "compilerOptions": {
    "types": ["node"],
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "lib": ["ES6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    // Enhance strictness.
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "alwaysStrict": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules", "dist"]
}
